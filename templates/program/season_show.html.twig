{% extends 'base.html.twig' %}

{% block body %}
	<div class="media">
		<h1 class="mt-0">{{ program.title }}</h1>

		{% for season in program.seasons %}
			<h2>
				saison :
				{{ season.number}}
			</h2>
			<p>Année:
				{{ season.year }}
				{{ season.year }}
				
				
			</p>

			<p>Description:
				{{ season.description }}
			</p>
		{% endfor %}

		{% for episode in season.episodes %}
			<h3>
				Episode :
				{{ episode.title }}
			</h3>
			<p>
				Synopsis :
				{{ episode.synopsis }}
			</p>
		{% endfor %}

	</div>
</div>

<a href="{{ path('program_index') }}">
	Retour à la liste des programmes
</a>{% endblock %}
