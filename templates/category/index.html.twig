{% extends 'base.html.twig' %}

{% block title %}All Categories
{% endblock %}

{% block body %}
	<h1>Toutes les catégories</h1>
	{% for category in categories %}
		<div>
			<h2>{{ loop.index }}
				/
				{{ category.name }}</h2>
			{# Lien vers la fiche de la série : #}
			<a href="{{ path('category_show', { categoryName: category.name }) }}">Voir les categories</a>
		</div>
	{% else %}
		Aucune catégorie trouvée.
	{% endfor %}
{% endblock %}
